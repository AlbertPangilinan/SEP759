<div id="<%= dom_id event %>" class="events__event-entry">
  <div class="events__event-entry__name">
    <strong>
      <%= link_to(event.name, event, class: "events__event-entry__link") %>
    </strong>
  </div>
  <div class="events__event-entry__venue">
    Venue:
    <%= event.venue %>
  </div>
  <div class="events__event-entry__location">
    <%= "#{event.city}, #{event.country}" %>
  </div>
</div>
